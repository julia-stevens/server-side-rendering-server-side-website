{% render "partials/head.liquid" %}
{% render "partials/header.liquid" %}

    <main class="index-main">
        <section class="home-introduction">
            <h1>Welcome to <em>Oncollaboration</em></h1>
            <p>On Oncollaboration, you can watch webinars on radiotherapy, access automatic transcripts, and explore related articles. You can also participate in the interactive Q&A section to ask questions, share insights, and engage in discussions with colleagues. The platform is designed to support knowledge exchange and collaboration in the field of radiotherapy.</p>
        </section>

        <section class="home-webinars">
            <div class="heading-home-section">
                <h2><a href="/webinars">Webinars</a></h2>
                <a href="/webinars" class="webinars-btns submit-button">See all webinars</a>
            </div>
            <div class="overview-webinars-home">
                {% for webinar in webinars %}
                    <article class="webinar-article">
                        <a href="/webinars/{{ webinar.slug }}">
                            <h3 class="sr-only">Webinar details of {{ webinar.title }}</h3>
                            <div class="webinar-thumbnail">
                                <img src="https://fdnd-agency.directus.app/assets/{{ webinar.thumbnail }}" alt="" width="100">
                                <p>{{ webinar.duration }}</p>
                            </div>
                            <div class="webinar-info">
                                <h3>{{ webinar.title }}</h3>  
                                {% for speaker in webinar.speakers %}
                                    <p>{{ speaker.avl_speakers_id.fullname }}</p>
                                {% endfor %}
                            </div>
                        </a>
                    </article>
                {% endfor %}
            </div>
        </section>

        <section class="home-contourings">
            <div class="heading-home-section">
                <h2><a href="/contourings">Contourings</a></h2>
                <a href="/contourings" class="webinars-btns submit-button">See all contourings</a>
            </div>
            <div class="contourings">
            {% for contouring in contourings %}
                <a href="/contouring/{{ contouring.title }}">
                    <article>
                        <h4>{{ contouring.title }}</h4>
                        <img src="https://fdnd-agency.directus.app/assets/{{ contouring.image_scan }}" alt="CT-scan {{ contouring.title }}" width="100">
                    </article>
                </a>
            {% endfor %}
            </div>
        </section>

        <section class="home-articles">
            <div class="heading-home-section">
                <h2><a href="/articles">Articles</a></h2>
                <a href="/articles" class="webinars-btns submit-button">See all articles</a>
            </div>
            {% for resource in resources %}
                <article class="webinar-resource">
                    <h3>{{ resource.directus_files_id.title }}</h3>
                    <div class="article-card">
                        <div class="download">
                            <div class="file-icon">
                                <img src="/assets/file_icon.svg" alt="" width="20">
                            </div>
                            <a href="https://fdnd-agency.directus.app/assets/{{ resource.directus_files_id.filename_disk }}?download=1" download="{{ resource.directus_files_id.filename_download }}">
                                {{ resource.directus_files_id.filename_download }}
                            </a>   
                        </div> 
                        <div class="resources-buttons">
                            <a href="https://fdnd-agency.directus.app/assets/{{ resource.directus_files_id.filename_disk }}" class="resources-button" target="_blank">
                                <img src="/assets/view_icon.svg" alt="View file" width="20">
                            </a>
                            <a href="https://fdnd-agency.directus.app/assets/{{ resource.directus_files_id.filename_disk }}?download=1" download="{{ resource.directus_files_id.filename_download }}" class="resources-button">
                                <img src="/assets/download_icon.svg" alt="Download file" width="20">
                            </a>
                        </div>    
                    </div>                 
                </article>
            {% endfor %}
        </section>     
    </main>

{% render "partials/footer.liquid" %}
{% render "partials/foot.liquid" %}